<odoo>
    <data>
        <record id="support_ticket_tree_view" model="ir.ui.view">
            <field name="name">support.ticket.tree</field>
            <field name="model">support.ticket</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ticket_id" />
                    <field name="name" />
                    <field name="email" />
                    <field name="customer_id" />
                    <field name="content"/>
                    <field name="ticket_type" groups="real-estate-ads.group_ticket_manager"/>
                    <field name="create_day" />
                    <field name="respone_day" />
                    <field name="deadline" />
                    <field name="status" widget="badge"/>
                    <field name="ticket_respone" />
                    <field name="user" widget="many2many_avatar_user"/>
                </tree>
            </field>
        </record>
        <record id="support_ticket_kanban_view" model="ir.ui.view">
            <field name="name">support.ticket.kanban</field>
            <field name="model">support.ticket</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" on_create="quick_create" 
                quick_create_view="real-estate-ads.quick_create_support_ticket_form_view">
                    <field name="ticket_type" groups="real-estate-ads.group_ticket_manager"/>
                    <field name="content"/>
                    <field name="email" />
                    <field name="status" widget="badge" groups="real-estate-ads.group_ticket_manager"/>
                    <template>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                                                          
                                    </strong>

                            
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="content" />  
                                        </div>
                                       
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">

                                        </div>
                                       <div class="oe_kanban_bottom_right text_end">
                                           <field name="user" widget="many2many_avatar_user" class="text_end" />
                                       </div>
                                    </div>

                                </div>
                            </div>
                          
                        </t>
                    </template>
                </kanban>
            </field>
        </record>
        <record id="support_ticket_form_view" model="ir.ui.view">
            <field name="name">support.ticket.form</field>
            <field name="model">support.ticket</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- <button name="action_sold" type="object" string="Sold" class="btn btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger"/> -->
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!-- <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_property_view_offers" type="object">
                                <field name="offer_count" string="Offer" widget="statinfo" />
                            </button>
                        </div> -->
                        <group>
                            <field name="name" widget="char_emojis" placeholder="Ticket Name"/>
                            <field name="ticket_type" groups="real-estate-ads.group_ticket_manager"/>
                            <group>
                                <field name="ticket_id" />
                                <field name="email" />
                                <field name="content"/>  
                            </group>
                            <group>
                                
                                <field name="status" groups="real-estate-ads.group_ticket_manager"/>
                                <field name="ticket_respone" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="create_day" />
                                    <field name="respone_day" />
                                    <field name="deadline" widget="remaining_days"/>
                                </group>
                                <group>
                                    <field name="ticket_respone" />
                                    <field name="user" widget="many2many_avatar_user"/>
                                    <field name="status" groups="real-estate-ads.group_ticket_manager"/>
                                </group>

                            </page>
                            <page string="Status">
                                <group>
                                    <field name="name" groups="real-estate-ads.group_ticket_manager"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="quick_create_support_ticket_form_view" model="ir.ui.view">
            <field name="name">support.ticket.form</field>
            <field name="model">support.ticket</field>
            <field name="arch" type="xml">
                <form> 
                    <group>
                        <field name="name" placeholder="Nhập tiêu đề"/>
                        <field name="content" placeholder="Nhập mô tả"/>
                        <field name="user" widget="many2many_avatar_user"/>
                    </group>
                    <group>
                        <!-- <span itemprop="image" style="display: inline-block;">
                            <img class="img img-responsive" src="/website/image/res.partner/6_8994a20/image" style="">
                        </span>  -->
                    </group>
                </form>
            </field>
        </record>
        <record id="support_ticket_search_view" model="ir.ui.view">    
            <field name="name">support.ticket.tree</field>
            <field name="model">support.ticket</field>
            <field name="arch" type="xml">
                <search> 
                    <field name="ticket_id" />
                    <field name="name" />
                    <field name="email" />
                    <field name="customer_id" />
                    <field name="content"/>
                    <field name="ticket_type" groups="real-estate-ads.group_ticket_manager"/>
                    <field name="create_day" />
                    <field name="respone_day" />
                    <field name="deadline" />
                    <field name="status" widget="badge" groups="real-estate-ads.group_ticket_manager"/>
                    <field name="ticket_respone" />
                    <field name="user" />
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                        <filter string="Name" name="group_by_name" context="{'group_by': 'name'}"/>
                        <filter string="Customer" name="group_by_customer_id" context="{'group_by': 'customer_id'}"/>
                        <filter string="Response Day" name="group_by_response_day" context="{'group_by': 'respone_day'}"/>
                        <filter string="Content" name="group_by_content" context="{'group_by': 'content'}"/>
                        <filter string="Email" name="group_by_email" context="{'group_by': 'email'}"/>
                        <filter string="User" name="group_by_user" context="{'group_by': 'user'}"/>
                    </group>
                    <searchpanel>
                        <field name="status" icon="fa-filter" group_by="group_by_status" limit="0"/>
                    </searchpanel>
                </search>
            </field>
        </record>
        <record id="action_ticket" model="ir.actions.act_window">
            <field name="name">Ticket</field>
            <field name="res_model">support.ticket</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="support_ticket_kanban_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Ticket to Advertise
                </p>
            </field>
        </record>
    </data>
</odoo>